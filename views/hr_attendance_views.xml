<odoo>
    <record id="view_attendance_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <group position="after">
                <group string="Attendance Analysis">
                    <field name="daily_late_hour" widget="float_time"/>
                    <field name="daily_overtime" widget="float_time"/>
                    <field name="monthly_late_hours" widget="float_time"/>
                    <field name="monthly_overtime" widget="float_time"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
